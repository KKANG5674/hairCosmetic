@charset "UTF-8";

html, body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, textarea, p, blockquote, th, td, img {
    margin: 0;
    padding: 0;
    
}

body {
    min-width: 1580px;
    max-width: 1920px;
    height: 100%;
    word-spacing: -1px;
    background: #ecf0f7;
}

#content {
    min-height: 750px;
    padding: 0 40px 40px;
    box-sizing: border-box;
    vertical-align: top;
}

.mTitle h2 {
    display: inline-block;
    height: 22px;
    padding: 0 5px 0 0;
    font-size: 25px;
    line-height: 18px;
    color: #2e3039;
    font-weight: normal;
    vertical-align: middle;
}

.mTitle span.desc {
    font-size: 14px;
    color: #969daa;
    
}

mDashStatus order {
	height: 80px;
}
