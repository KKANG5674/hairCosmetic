.mDashSales {
    display: flex;
    background: #fff;
    height: 150px;
    border-radius: 2px;
    box-shadow: 0px 2px 1px 0px rgba(205,211,222,1);
    transition: .2s ease-out;
}

.mDashSales .item {
   position: relative;
    flex: 1;
    display: block;
    height: 147px;
    padding: 42px 40px 45px 180px;
    color: #2e3039;
    box-sizing: border-box;
    transition: .3s ease-out;
}

a {
    text-decoration: none;
    color: #2e3039;
}

.mDashSales .item.payment:before {
    background-position: -72px 0; 
}

.mDashSales .item:before {
    content: "";
    position: absolute;
    top: 37px;
    left: 70px;
    display: block;
    width: 72px;
    height: 72px;
    border-radius: 50%;
    background-color: #c9cfe0;
    background-image: url(//img.echosting.cafe24.com/ec/mode/influencer/common/sfix_dashboard_sales.png);
    background-repeat: no-repeat;
}

.mDashSales .item:not(:last-child):after {
    content: "";
    position: absolute;
    top: 41px;
    right: 0;
    display: block;
    width: 1px;
    height: 69px;
    background: #ebf0f5;
    
}

.mDashSales .title {
   
    order: 3;
    display: inline;
    padding:50px;
  	height:50px;
    width: 100%;
    margin-top: 40px 0 0 red;
    font-size: 30px;
    font-weight: normal;
      border: 1px solid red;
}

.data {
    font-size: 25px;
    font-weight: normal;
     border: 1px solid red;
}

.mTitle {
    position: relative;
    margin: 40px 0 14px;
}

.board1 {
    display: flex;
    flex-wrap: wrap;
}

.mDashStatus:not(:last-child) {
    margin-right: 20px;
}

.mDashStatus {
    flex: 1;
    text-align: center;
    background: #fff;
    border-radius: 2px;
    box-shadow: 0px 2px 1px 0px rgba(205,211,222,1);
    transition: .2s ease-out;
}

.mDashStatus .item {
    display: flex;
    flex-wrap: wrap; 
    align-items: center;
    justify-content: center;
    min-height: 147px;
    padding: 36px 0;
    box-sizing: border-box;
}

.order {
   
    min-height: 140px;
    
}

.mDashStatus:not(:last-child) {
    margin-right: 20px;
}

div {
    display: block;
}

.mDashStatus .title {
    order: 3;
    display: block;
    width: 100%;
    margin: 17px 0 0;
    font-size: 20px;
    color: #5ea5fe;
    font-weight: normal;
}

.mDashStatus .count {
	padding:20px;
    position: relative;
    display: inline-block;
    font-size: 36px;
    line-height: 28px;
    font-weight: bold;
}

