<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<div id="content">
    <div id="header">
        <h2>공지사항 입력 페이지</h2>
    </div>
    <div>
        <table id="notice_input">
            <colgroup>
                    <col width="140px" />
                    <col />
            </colgroup>
            <tbody>
                <tr>
                    <th scope="row">제목</th>
                    <td><input type="text" name="title" maxlength=50  style="width:450px;" placeholder="[상품/배송/주문/공지] 공지사항 제목"></td>
                </tr>
                <tr>
                    <th scope="row">내용</th>
                    <td>
                    <textarea name="notice_info" cols="60" rows="5" placeholder="공지사항입니다."
                              style="margin: 0px; width: 95%; resize: vertical; "></textarea>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center; height: 40px; padding: 2px;">
                        <input type="button" id="insert" value="등록">
                        <input type="button" id="cancel" value="취소" onclick="location.href='index_admin.jsp?workgroup=content&work=notice_admin'">
                    </td>
                </tr>              
            </tbody>
        </table>
    </div>
</div>